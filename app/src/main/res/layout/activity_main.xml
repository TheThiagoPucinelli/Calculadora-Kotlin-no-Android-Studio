<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EEF6AD"
            android:padding="10dp"
            android:text="Calculadora"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Espaço -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Primeiro Número -->
        <TextView
            android:id="@+id/labelPrimeiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite o Primeiro Número:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/textNumero1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número 1"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:background="#F5F5F5" />

        <!-- Segundo Número -->
        <TextView
            android:id="@+id/labelSegundo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Digite o Segundo Número:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/textNumero2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número 2"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:background="#F5F5F5" />

        <!-- Espaço -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Linha 1: Somar e Subtrair -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnSomar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Somar"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50" /> <!-- Verde -->

            <Button
                android:id="@+id/btnSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Subtrair"
                android:textColor="#FFFFFF"
                android:backgroundTint="#F44336" /> <!-- Vermelho -->
        </LinearLayout>

        <!-- Linha 2: Multiplicar e Dividir -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnMultiplicar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Multiplicar"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3" /> <!-- Azul -->

            <Button
                android:id="@+id/btnDividir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Dividir"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF9800" /> <!-- Laranja -->
        </LinearLayout>

        <!-- Espaço -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Resultado -->
        <TextView
            android:id="@+id/labelResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#BEDEFF"
            android:padding="16dp"
            android:text="Resultado..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>
